<div class="container h-100">
	<div class="row align-items-center">
		<div class="col-12">
			<div class="card p-5 mb-5">
				<div class="card-body">
					<div class="row">
						<div class="col-md-4 col-12 text-center mb-4">
							<div class="profile_img">
								<img class="img-fluid avatar-view rounded-circle mb-3" src="images/dzimiks.jpg"
									 alt="dzimiks"
									 style="max-height: 200px;">
							</div>

							<h2>dzimiks</h2>

							<ul class="list-unstyled user_data">
								<li>
									<i class="fas fa-map-marker-alt"></i>
									Belgrade, Serbia
								</li>

								<li>
									<i class="fas fa-briefcase"></i> Software Engineer
								</li>

								<li>
									<i class="fa fa-globe"></i>
									<a href="https://www.dzimiks.com" target="_blank">www.dzimiks.com</a>
								</li>
							</ul>
						</div>

						<div class="col-md-8 col-12 mb-4">
							<form>
								<div class="form-group row">
									<label for="userFirstName" class="col-sm-4 col-form-label">First Name:</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" id="userFirstName"
											   placeholder="First Name" value="{{user.firstName}}">
									</div>
								</div>

								<div class="form-group row">
									<label for="userLastName" class="col-sm-4 col-form-label">Last Name:</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" id="userLastName"
											   placeholder="Last Name" value="{{user.lastName}}">
									</div>
								</div>

								<div class="form-group row">
									<label for="userEmail" class="col-sm-4 col-form-label">Email:</label>
									<div class="col-sm-8">
										<input type="text" readonly class="form-control-plaintext" id="userEmail"
											   value="{{user.email}}">
									</div>
								</div>

								<div class="form-group row">
									<label for="userPassword" class="col-sm-4 col-form-label">Password</label>
									<div class="col-sm-8">
										<input type="password" class="form-control" id="userPassword"
											   placeholder="Password" value="{{user.password}}">
									</div>
								</div>

								<div class="form-group row">
									<label for="userRole" class="col-sm-4 col-form-label">Role:</label>
									<div class="col-sm-8">
										<select id="userRole" class="form-control">
											<option selected>{{user.role.name}}</option>
											{{#ifEquals user.role.name 'admin'}}
												<option>user</option>
											{{else}}
												<option>admin</option>
											{{/ifEquals}}
										</select>
									</div>
								</div>

								<div class="form-group row">
									<label for="userStatus" class="col-sm-4 col-form-label">Status:</label>
									<div class="col-sm-8">
										<select id="userStatus" class="form-control">
											<option selected>{{user.status.name}}</option>
											{{#ifEquals user.status.name 'REGULAR'}}
												<option>GOLD</option>
												<option>DIAMOND</option>
											{{/ifEquals}}

											{{#ifEquals user.status.name 'GOLD'}}
												<option>REGULAR</option>
												<option>DIAMOND</option>
											{{/ifEquals}}

											{{#ifEquals user.status.name 'DIAMOND'}}
												<option>REGULAR</option>
												<option>GOLD</option>
											{{/ifEquals}}
										</select>
									</div>
								</div>

								<div class="form-group row">
									<label for="userIsBanned" class="col-sm-4 col-form-label">Is Banned:</label>
									<div class="col-sm-8">
										<select id="userIsBanned" class="form-control">
											<option selected>{{user.isBanned}}</option>
											{{#ifEquals user.isBanned true}}
												<option>false</option>
											{{else}}
												<option>true</option>
											{{/ifEquals}}
										</select>
									</div>
								</div>

								<div class="form-group row">
									<label for="userBanHistory" class="col-sm-4 col-form-label">Ban History:</label>
									<div class="col-sm-8">
										<textarea class="form-control" id="userBanHistory" rows="2">
											{{#each user.banHistory}}
												Date: {{formatDate this}},
											{{/each}}
										</textarea>
									</div>
								</div>

								<div class="form-group row">
									<label for="userReservationNumber" class="col-sm-4 col-form-label">Reservation
										Number:</label>
									<div class="col-sm-8">
										<input type="number" class="form-control-plaintext" id="userReservationNumber"
											   value="{{user.reservationNumber}}">
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-12">
			<div class="card p-5 mb-5">
				<div class="card-body">
					<ul class="nav nav-tabs" id="myTab" role="tablist">
						<li class="nav-item">
							<a class="nav-link active" id="users-tab" data-toggle="tab" href="#home" role="tab"
							   aria-controls="home" aria-selected="true">Users</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" id="movies-tab" data-toggle="tab" href="#profile" role="tab"
							   aria-controls="profile" aria-selected="false">Movies</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" id="reservations-tab" data-toggle="tab" href="#contact" role="tab"
							   aria-controls="contact" aria-selected="false">Reservations</a>
						</li>
					</ul>

					<div class="tab-content" id="myTabContent">
						<div class="tab-pane fade show active" id="home" role="tabpanel"
							 aria-labelledby="users-tab">
							<div class="row">
								<div class="col-12 my-4">
									<h3 class="text-center">All users</h3>
									<div class="table-responsive">
										<table id="users-table" class="table table-striped table-bordered">
											<thead>
											<tr>
												<th>First Name</th>
												<th>Last Name</th>
												<th>Email</th>
												<th>Password</th>
												<th>Username</th>
												<th>Role</th>
												<th>Status</th>
												<th>Is Banned</th>
												<th>Ban History</th>
												<th>Reservation Number</th>
											</tr>
											</thead>
											<tbody>
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>

						<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="movies-tab">
							<div class="row">
								<div class="col-12 my-4">
									<h3 class="text-center">All movies</h3>
									<div class="table-responsive">
										<table id="movies-table" class="table table-striped table-bordered">
											<thead>
											<tr>
												<th>Title</th>
												<th>Description</th>
												<th>Genre</th>
												<th>Duration</th>
												<th>Actors</th>
											</tr>
											</thead>
											<tbody>
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>

						<div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="reservations-tab">
							<div class="row">
								<div class="col-12 my-4">
									<h3 class="text-center">All reservations</h3>
									<div class="table-responsive">
										<table id="reservations-table" class="table table-striped table-bordered w-100">
											<thead>
											<tr>
												<th>Number Of Seats</th>
												<th>Price</th>
											</tr>
											</thead>
											<tbody>
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
